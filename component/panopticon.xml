    <version>1.0.8</version>
    <description>COM_PANOPTICON_XML_DESCRIPTION</description>
    <namespace path="src">Akeeba\Component\Panopticon</namespace>

    <administration>
        <menu>COM_PANOPTICON</menu>

        <files folder="backend">
